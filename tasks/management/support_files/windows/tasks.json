{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Format Python",
            "command": "cmd",
            "args": [
                "/c",
                "/path/to/venv/Scripts/activate && python /path/to/repository/tasks/tasks/format_python/format_python_task.py ${workspaceFolder} ${file}"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
